<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<FlowPane prefHeight="800.0" prefWidth="1200.0" BorderPane.alignment="CENTER" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="se.selimkose.labb3.Controller.Controller">
    <children>
      <VBox maxHeight="80.0" prefHeight="80.0" prefWidth="1200.0">
         <children>
              <MenuBar VBox.vgrow="ALWAYS">
                  <menus>
                      <Menu mnemonicParsing="false" text="File">
                          <items>
                              <MenuItem mnemonicParsing="false" onAction="#exit" text="Close" />
                        <MenuItem mnemonicParsing="false" onAction="#saveSVG" text="Save as..." />
                          </items>
                      </Menu>
                      <Menu mnemonicParsing="false" text="Edit">
                          <items>
                              <MenuItem mnemonicParsing="false" text="Delete" />
                          </items>
                      </Menu>
                      <Menu mnemonicParsing="false" text="Help">
                          <items>
                              <MenuItem mnemonicParsing="false" text="About" />
                          </items>
                      </Menu>
                  </menus>
              </MenuBar>
              <HBox id="hbox" alignment="CENTER" spacing="20.0" VBox.vgrow="ALWAYS">
                  <children>
                      <ChoiceBox fx:id="choiceBoxShape" prefHeight="27.0" prefWidth="92.0" value="Shape" />
                      <ColorPicker fx:id="colorPicker" prefHeight="25.0" prefWidth="108.0" />
                      <Slider fx:id="sizeSlider" majorTickUnit="10.0" min="10.0" prefHeight="37.0" prefWidth="175.0" showTickLabels="true" showTickMarks="true" value="10.0" />
                      <Button onAction="#clearCanvas" text="Clear" />
                      <Button mnemonicParsing="false" onAction="#undo" text="Undo" />
                      <Button mnemonicParsing="false" onAction="#redo" text="Redo" />
                  </children>
              </HBox>
         </children>
      </VBox>
        <Pane id="canvasPane" prefHeight="720.0" prefWidth="609.0">
            <children>
                <Canvas id="canvas" fx:id="canvas" height="720.0" onMouseClicked="#canvasAction" width="609.0" />
            </children>
        </Pane>
        <AnchorPane id="chatPane" prefHeight="720.0" prefWidth="590.0">
            <children>
                <Button fx:id="buttonSend" layoutX="452.0" layoutY="589.0" onAction="#sendMessage" prefHeight="25.0" prefWidth="55.0" text="Send Message" />
                <TextField fx:id="textFieldMessage" layoutX="64.0" layoutY="588.0" prefHeight="27.0" prefWidth="375.0" />
                <ListView fx:id="messageListView" layoutX="64.0" layoutY="75.0" prefHeight="473.0" prefWidth="444.0">

                </ListView>
                <Label layoutX="163.0" layoutY="25.0" prefHeight="17.0" prefWidth="228.0" text="Chat">
                </Label>
            </children>
        </AnchorPane>
    </children>
</FlowPane>
