<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<FlowPane prefHeight="800.0" prefWidth="1200.0" BorderPane.alignment="CENTER" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="se.selimkose.labb3.Controller.Controller">
    <children>
      <VBox maxHeight="80.0" prefHeight="80.0" prefWidth="1200.0">
         <children>
              <MenuBar VBox.vgrow="ALWAYS">
                  <menus>
                      <Menu mnemonicParsing="false" text="File">
                          <items>
                              <MenuItem mnemonicParsing="false" onAction="#exit" text="Close" />
                        <MenuItem mnemonicParsing="false" onAction="#saveSVG" text="Save as..." />
                          </items>
                      </Menu>
                      <Menu mnemonicParsing="false" text="Edit">
                          <items>
                              <MenuItem mnemonicParsing="false" text="Delete" />
                          </items>
                      </Menu>
                      <Menu mnemonicParsing="false" text="Help">
                          <items>
                              <MenuItem mnemonicParsing="false" text="About" />
                          </items>
                      </Menu>
                  </menus>
              </MenuBar>
              <HBox id="hbox" alignment="CENTER" spacing="20.0" VBox.vgrow="ALWAYS">
                  <children>
                      <ChoiceBox fx:id="choiceBoxShape" prefHeight="27.0" prefWidth="92.0" value="Shape" />
                      <ColorPicker fx:id="colorPicker" prefHeight="25.0" prefWidth="108.0" promptText="Color" />
                      <Slider fx:id="sizeSlider" majorTickUnit="10.0" min="10.0" prefHeight="37.0" prefWidth="175.0" showTickLabels="true" showTickMarks="true" value="10.0" />
                      <Button onAction="#clearCanvas" prefHeight="34.0" prefWidth="103.0" text="Clear">
                     <graphic>
                        <ImageView fitHeight="24.0" fitWidth="66.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@img/icons/eraser.png" />
                           </image>
                        </ImageView>
                     </graphic></Button>
                      <Button mnemonicParsing="false" onAction="#undo" prefHeight="33.0" prefWidth="95.0" text="Undo">
                     <graphic>
                        <ImageView fitHeight="21.0" fitWidth="106.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@img/icons/redo.png" />
                           </image>
                        </ImageView>
                     </graphic></Button>
                      <Button mnemonicParsing="false" onAction="#redo" prefHeight="33.0" prefWidth="107.0" text="Redo">
                     <graphic>
                        <ImageView fitHeight="28.0" fitWidth="21.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@img/icons/undo.png" />
                           </image>
                        </ImageView>
                     </graphic>
                     <font>
                        <Font size="14.0" />
                     </font></Button>
                  </children>
              </HBox>
         </children>
      </VBox>
        <Pane id="canvasPane" prefHeight="720.0" prefWidth="609.0">
            <children>
                <Canvas id="canvas" fx:id="canvas" height="720.0" onMouseClicked="#canvasAction" width="609.0" />
            </children>
        </Pane>
        <AnchorPane id="chatPane" prefHeight="720.0" prefWidth="590.0">
            <children>
                <Button fx:id="buttonSend" layoutX="436.0" layoutY="587.0" onAction="#sendMessage" prefHeight="27.0" prefWidth="103.0" text="Send" />
                <TextField fx:id="textFieldMessage" layoutX="64.0" layoutY="588.0" prefHeight="25.0" prefWidth="353.0" />
                <ListView id="listView" fx:id="messageListView" layoutX="64.0" layoutY="75.0" prefHeight="464.0" prefWidth="476.0">

                </ListView>
                <Label layoutX="163.0" layoutY="25.0" prefHeight="17.0" prefWidth="228.0" text="Chat">
                </Label>
            </children>
        </AnchorPane>
    </children>
</FlowPane>
